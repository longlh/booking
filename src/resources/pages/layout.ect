<!doctype html>
<html>

<head>
  <title>Booking</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Encode+Sans:300,700&display=swap" rel="stylesheet">
  <% content 'head-end' %>
</head>

<body>
  <div class="page-wrapper">
    <header class="header">
      <div class="header__wrapper">
        <div class="header__top">
          <div class="header__logo">
            <a href="/"><%= @settings.title %></a>
          </div><!-- header__logo -->
        </div><!-- header__top -->

        <div class="header__navigation">

        </div><!-- header__navigation -->

        <div class="header__quick-access quick-access">
          <div class="quick-access__item">
            <a href="/" class="header__item-content btn btn--action">List rooms</a>
          </div>
        </div><!-- header__quick-access -->
      </div><!-- header__wrapper -->
    </header><!-- header -->

    <% content %>

    <footer class="footer">
      <ul class="footer__content">
        <ul class="footer__links footer__links--general">
          <li><a href="/" class="footer-link">Company</a></li>
          <li><a href="/" class="footer-link">Privacy Policy</a></li>
          <li><a href="/" class="footer-link">Terms of Service</a></li>
          <li><a href="/" class="footer-link">Contact Us</a></li>
        </ul><!-- footer__links -->

        <ul class="footer__links footer__links--social">
          <li>
            <a href="/" class="footer-link">
              <img src="<%= @__asset('img/social-facebook.svg') %>" />
            </a>
          </li>
          <li>
            <a href="/" class="footer-link">
              <img src="<%= @__asset('img/social-twitter.svg') %>" />
            </a>
          </li>
          <li>
            <a href="/" class="footer-link">
              <img src="<%= @__asset('img/social-instagram.svg') %>" />
            </a>
          </li>
        </ul><!-- footer__links -->

        <ul class="footer__links footer__links--company-brand">
          <li>Vacation Rentals and Service Apartments | <%= @settings.title %></li>
        </ul><!-- footer__links -->
      </div><!-- footer__content -->
    </footer><!-- footer -->

    <% content 'body-end' %>
  </div>
</body>

</html>
