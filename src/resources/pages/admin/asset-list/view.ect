<% extend 'admin/layout' %>

<% block 'body-end' :%>
  <script src="<%= @__asset('admin/asset-list.js') %>"></script>
<% end %>

<h1>Assets</h1>
<form action="/admin/assets" method="post">
  <button type="submit">Create new asset</button>
</form>
<ul>
  <% for asset in @assets :%>
    <li>
      <a href="/admin/assets/<%= asset._id %>"><%= asset.name %></a>
    </li>
  <% end %>
</ul>
